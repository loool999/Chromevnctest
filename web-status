#!/bin/bash

echo "ğŸŒ VNC Web Deployment Status"
echo "========================================"
echo ""

# Check VNC Server
echo "ğŸ–¥ï¸  VNC Desktop Server:"
if pgrep -f "Xtigervnc.*:3" > /dev/null; then
    echo "   âœ… Running on display :3 (port 5903)"
else
    echo "   âŒ Not running"
fi

# Check XFCE Desktop
if pgrep -f "startxfce4" > /dev/null; then
    echo "   âœ… XFCE desktop environment active"
else
    echo "   âŒ Desktop environment not running"
fi

# Check Audio
if pgrep -f "pulseaudio" > /dev/null; then
    echo "   âœ… Audio system running"
else
    echo "   âŒ Audio system not detected"
fi

echo ""

# Check Web Interface
echo "ğŸŒ Web Interface:"
if pgrep -f "websockify.*6093" > /dev/null; then
    echo "   âœ… Web server running on port 6093"
    echo "   ğŸ”— Access at: http://localhost:6093/"
else
    echo "   âŒ Web server not running"
fi

echo ""

# Check Network Ports
echo "ğŸ“¡ Network Ports:"
vnc_port=$(netstat -tuln 2>/dev/null | grep ":5903" | wc -l)
web_port=$(netstat -tuln 2>/dev/null | grep ":6093" | wc -l)

if [ "$vnc_port" -gt 0 ]; then
    echo "   âœ… VNC port 5903 listening"
else
    echo "   âŒ VNC port 5903 not available"
fi

if [ "$web_port" -gt 0 ]; then
    echo "   âœ… Web port 6093 listening"
else
    echo "   âŒ Web port 6093 not available"
fi

echo ""

# Overall Status
if [ "$vnc_port" -gt 0 ] && [ "$web_port" -gt 0 ] && pgrep -f "startxfce4" > /dev/null; then
    echo "ğŸ‰ OVERALL STATUS: âœ… FULLY OPERATIONAL"
    echo ""
    echo "ğŸš€ Quick Access:"
    echo "   Web Browser: http://localhost:6093/"
    echo "   Auto-Connect: http://localhost:6093/vnc.html?host=localhost&port=6093&password=vnc123&autoconnect=true"
    echo "   VNC Client: localhost:5903 (password: vnc123)"
else
    echo "âš ï¸  OVERALL STATUS: âŒ PARTIALLY RUNNING"
    echo ""
    echo "ğŸ”§ To start missing services:"
    echo "   ./start-vnc      # Start VNC desktop"
    echo "   ./start-web-vnc  # Start web interface"
fi

echo ""
echo "ğŸ“‹ Management Commands:"
echo "   ./start-vnc      # Start VNC server"
echo "   ./stop-vnc       # Stop VNC server"
echo "   ./start-web-vnc  # Start web interface"
echo "   ./stop-web-vnc   # Stop web interface"
echo "   ./web-status     # This status check"